#include<stdio.h>
void deleteByValue(int arr[], int *n, int value)
{
    int index=-1;
    for(int i=0; i<*n; i++)
    {
        if (arr[i]==value)
        {
            index=i;
            break;
        }
    }
    if(index==-1)
    {
        printf("value  %d doesn't found.\n",n);
        return ;
    }
    for(int i=index; i< *n-1 ; i++)
    {
        arr[i]=arr[i+1];
    }
    (*n)--;
}
void printArr(int arr[], int n)
{
    printf("Updated array:");
    for(int i=0; i<n; i++)
    {
        printf("%d ",arr[i]);
    }
    printf("\n");
}
int main()
{
    int arr[100], n, value;
    printf("enter size:");
    scanf("%d",&n);
    printf("enter %d elements:",n);
    for(int i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("enter value to delete:");
    scanf("%d",&value);
    deleteByValue(arr, &n, value);
    printArr(arr,n);
    return 0;
}

