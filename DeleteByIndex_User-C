#include<stdio.h>
void delByIndex(int arr[], int *n, int index)
{
    if( index>=*n || index<0 )
    {
        printf("Invalid index\n");
        return;
    }
    for(int i=index; i<*n-1; i++)
    {
        arr[i]=arr[i+1];
    }
    (*n)--;
}
void printArr(int arr[], int n)
{
    printf("Updated array:");
    for(int i=0; i<n; i++)
    {
        printf("%d ",arr[i]);
    }
    printf("\n");
}
int main()
{
    int arr[100],n,index;
    printf("Enter size: ");
    scanf("%d",&n);
    printf("Enter %d element: ",n);
    for (int i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("Enter index to delete: ");
    scanf("%d",&index);
    delByIndex(arr,&n,index);
    printArr(arr,n);
    return 0;
}


    





